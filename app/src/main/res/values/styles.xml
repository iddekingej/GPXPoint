<resources>
    <color name="windowBackground">#EEE</color>
    <color name="sectionTitleLine">#FF0000BB</color>
    <color name="warningBackground">#F00</color>
    <color name="messageBackground">#080</color>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style of Lon lat display -->
    <style name="lonLat" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Display of other information -->
    <style name="otherLabel" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Label on top of the screen, used for  warning -->
    <style name="warningLabel"  parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@color/warningBackground</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <!-- Benigne message on top of the screen about GPS status -->

    <style name="gpsFixMessage" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@color/messageBackground</item>
        <item name="android:padding">3dp</item>
    </style>

    <!-- Style of section titles !-->

    <style name="sectionLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/sectionTitleLine</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style of help button -->

    <style name="helpLabel"    parent="android:Widget.TextView">
        <item name="android:textColor">@color/sectionTitleLine</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>
