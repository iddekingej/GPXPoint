<resources>
    <color name="windowBackground">#CCC</color>
    <color name="sectionTitleLine">#FF0000BB</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
    <style name="lonLat" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="otherLabel" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="warningLabel"  parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#F00</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="gpsFixMessage" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#080</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="sectionLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/sectionTitleLine</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="helpLabel"    parent="android:Widget.TextView">
        <item name="android:textColor">@color/sectionTitleLine</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>
