<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="lonLat" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="otherLabel" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="warningLabel"  parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#F00</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="sectionLabel" parent="android:Widget.TextView">
        <item name="android:textColor">#0000BB</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
